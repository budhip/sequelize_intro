<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Student Page</title>
  </head>
  <body>
    <h1>DATA MURID</h1>

    <button id="btn-start"> <a href="student/add"> Tambah Data</a></button>
    
    <div>
      <table border="1">
        <tr>
          <th>Id</th>
          <th>Nama Depan</th>
          <th>Nama Belakang</th>
          <th>Email</th>
          <th>Jurusan</th>
          <th>Action</th>
        </tr>
        <% dataStudent.forEach(dst => {%>
          <tr>
            <td><%= dst.id %></td>
            <td><%= dst.first_name %></td>
            <td><%= dst.last_name %></td>
            <td><%= dst.email %></td>
            <td><%= dst.jurusan %></td>
            <td><a href='student/edit/<%= dst.id %>'> Edit</a> || <a href='student/delete/<%= dst.id %>' onclick="return confirm('Yakin mau menghapus data ini?');"> Delete</a></td>
          </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
