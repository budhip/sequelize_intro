<!DOCTYPE html>
<html>
  <head>
    <%- include layout/page-header %>
  </head>
  <body>
    <h1>Edit Data Murid</h1>
    <%- include layout/menu %>
    <br>
    <button id="btn-back" onclick="window.location='/student'">Back</button>
    <div>
      <form id="main-form" class="modal-content animate" name="mainForm" action="/student/edit/<%= data.id %>" method="post">
        <div class="container">
          <div>
            <% if(errmsg != ''){%>
                <span><%= errmsg%></span>
            <%}%>
          </div>
          <label><b>Id</b></label>
          <input type="text" name="id" value="<%= data.id %>" disabled/>
          <label><b>First Name</b></label>
          <input type="text" name="first_name" value="<%= data.first_name %>" />
          <label><b>Last Name</b></label>
          <input type="text" name="last_name" value="<%= data.last_name %>" />
          <label><b>Email</b></label>
          <input type="text" name="email" value="<%= data.email %>" />
          <input type="hidden" name="emailOri" value="<%= data.email %>">
          <label><b>Jurusan</b></label>
          <input type="text" name="jurusan" value="<%= data.jurusan %>" />
          <div class="clearfix">
            <button type="submit">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
